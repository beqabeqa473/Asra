<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceScreen android:title="@string/speechTitle">>

    <ListPreference
      android:key="speechEngine"
      android:title="@string/speechEngineTitle"
      android:defaultValue=""/>

    <EditTextPreference
      android:key="rateScale"
      android:inputType="numberDecimal"
      android:title="@string/rateScaleTitle"
      android:summary="@string/rateScaleSummary"
      android:dialogTitle="@string/rateScaleTitle"
      android:dialogMessage="@string/rateScaleSummary"
      android:defaultValue="1"/>

    <EditTextPreference
      android:key="pitchScale"
      android:inputType="numberDecimal"
      android:title="@string/pitchScaleTitle"
      android:summary="@string/pitchScaleSummary"
      android:dialogTitle="@string/pitchScaleTitle"
      android:dialogMessage="@string/pitchScaleSummary"
      android:defaultValue="1"/>

    <CheckBoxPreference
      android:key="echoByChar"
      android:defaultValue="true"
      android:title="@string/echoByCharTitle"/>

    <CheckBoxPreference
      android:key="echoByWord"
      android:defaultValue="false"
      android:title="@string/echoByWordTitle"/>

    <CheckBoxPreference
      android:key="speakNotificationsWhenScreenOff"
      android:defaultValue="true"
      android:title="@string/speakNotificationsWhenScreenOffTitle"/>

    <CheckBoxPreference
      android:key="useBluetoothSCO"
      android:defaultValue="false"
      android:title="@string/useBluetoothSCOTitle"
      android:summary="@string/useBluetoothSCOSummary"/>

    <CheckBoxPreference
      android:key="managePunctuationSpeech"
      android:defaultValue="true"
      android:title="@string/managePunctuationSpeechTitle"
      android:summary="@string/managePunctuationSpeechSummary"/>

    <CheckBoxPreference
      android:key="duckNonSpeechAudio"
      android:defaultValue="true"
      android:title="@string/duckNonSpeechAudioTitle"
      android:summary="@string/duckNonSpeechAudioSummary"/>

    <Preference
      android:key="textToSpeechSettings"
      android:title="@string/textToSpeechTitle"
      android:summary="@string/textToSpeechSummary"
      android:persistent="false"/>

  </PreferenceScreen>

  <PreferenceScreen android:title="@string/alertsTitle">

    <CheckBoxPreference
      android:key="talkingCallerID"
      android:defaultValue="true"
      android:title="@string/talkingCallerIDTitle"
      android:summary="@string/talkingCallerIDSummary"/>

    <CheckBoxPreference
      android:key="voicemailAlerts"
      android:defaultValue="true"
      android:title="@string/voicemailAlertsTitle"
      android:summary="@string/voicemailAlertsSummary"/>

  </PreferenceScreen>

  <CheckBoxPreference
    android:key="hapticFeedback"
    android:defaultValue="true"
    android:title="@string/hapticFeedbackTitle"
    android:summary="@string/hapticFeedbackSummary"/>

  <PreferenceScreen android:title="@string/triggersTitle" android:summary="@string/triggersSummary">

    <ListPreference
      android:key="onShakingStarted"
      android:title="@string/onShakeTitle"
      android:summary="@string/onShakeSummary"/>

    <ListPreference
      android:key="onProximityNear"
      android:title="@string/onProximityNearTitle"
      android:summary="@string/onProximityNearSummary"
      android:defaultValue="stopSpeech"/>

  </PreferenceScreen>

  <org.droidparts.preference.MultiSelectListPreference
    android:title="@string/notificationFiltersTitle"
    android:summary="@string/notificationFiltersSummary"
    android:key="notificationFilters"/>

  <PreferenceScreen android:title="@string/scripts"
    android:key="scripts"
    />

  <PreferenceScreen android:title="@string/debuggingTitle">

    <CheckBoxPreference
      android:key="sendBacktraces"
      android:defaultValue="true"
      android:title="@string/sendBacktracesTitle"
      android:summary="@string/sendBacktracesSummary"/>

    <CheckBoxPreference
      android:key="profiling"
      android:defaultValue="false"
      android:title="@string/profilingTitle"
      android:summary="@string/profilingSummary"/>

  </PreferenceScreen>

</PreferenceScreen>
