<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="info.thewordnerd.spiel">
  <uses-sdk android:minSdkVersion="4"/>

  <application android:label="Spiel">

    <activity android:name=".activities.Main">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service android:name=".SpielService">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
      </intent-filter>
    </service>

    <!--<provider android:name=".scripts.Provider" android:authorities="info.thewordnerd.spiel.scripts.Provider"/>-->

  </application>
</manifest>
